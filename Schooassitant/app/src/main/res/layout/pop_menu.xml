<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conteview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:alpha="0.9"
    android:background="#333333"
    android:gravity="center_horizontal"
    tools:ignore="ExtraText">
<LinearLayout
    android:id="@+id/ll_close"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="20dp"
    android:background="#333333"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:padding="8dp"
        android:text="取消">

    </TextView>

</LinearLayout>



<LinearLayout
android:id="@+id/sendzudui_window"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_above="@id/ll_close"
android:layout_toRightOf="@id/senditem_window"

android:layout_marginBottom="30dp"
android:layout_marginTop="40dp"
android:layout_marginLeft="50dp"
    android:gravity="center"
android:orientation="vertical">
<ImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@mipmap/zudui1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="发起组队"

        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>

<LinearLayout
android:id="@+id/senditem_window"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_above="@id/ll_close"
android:layout_marginBottom="30dp"
android:layout_marginTop="40dp"
android:layout_marginLeft="60dp"

android:gravity="center"
android:orientation="vertical">
<ImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@mipmap/xianzhi1"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="发闲置"
    android:textColor="@color/white"
    android:textSize="18sp"/>
</LinearLayout>

</RelativeLayout>