<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageback"
            android:src="@drawable/title_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/person_info"
        android:layout_below="@id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:id="@+id/p_info_userimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/head5" />

        <TextView
            android:id="@+id/p_info_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/p_info_userimg"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/p_info_userimg"
            android:layout_toRightOf="@+id/p_info_userimg"
            android:text="超级吴晓机"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/p_info_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/p_info_userimg"
            android:layout_alignLeft="@+id/p_info_username"
            android:layout_alignStart="@+id/p_info_username"
            android:text="1小时" />
    </RelativeLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/p_info_price"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/person_info"
        android:layout_below="@+id/person_info"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_light"
        />


    <TextView
        android:id="@+id/p_info"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_info_price"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="近乎全新大旅行箱，里面空间充足。石牌校区当面交易"
        android:textColor="#000000"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"

        android:layout_below="@+id/p_info"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
      />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="right">"
        <Button
            android:id="@+id/buy_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
           android:layout_marginBottom="5dp"
            android:background="@drawable/want_buy_bg"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:text="我想要">

        </Button>

    </LinearLayout>
</RelativeLayout>

