<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.schooassitant.fragment.fragment_xiaoxi">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffda68"
        android:id="@+id/relativeLayout13"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="消息"
            android:id="@+id/textView60"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout13"
        android:background="#66dadada"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout13"
            android:background="@android:color/white"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/set_r_main"
                android:background="@drawable/set_btn_bg"
                >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/person_img"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/default_user_avatar"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张玉先2234"
                    android:id="@+id/set_text_name"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_alignTop="@+id/btn_tologin"
                    android:layout_toRightOf="@+id/person_img"
                    android:layout_toEndOf="@+id/person_img"
                    android:layout_marginLeft="10dp"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:id="@+id/textView62"
                    android:layout_below="@+id/person_img"
                    android:layout_alignLeft="@id/person_img"
                    android:layout_alignParentStart="true"

                   android:text="22小时前"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/set_text_info"
                    android:layout_above="@+id/textView62"
                    android:layout_alignLeft="@+id/set_text_name"
                    android:layout_alignStart="@+id/set_text_name"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    />



                <ImageView
                    android:id="@+id/btn_tologin"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    />
                </RelativeLayout>








            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
               android:layout_below="@id/set_r_main"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/set_r_main2"
                android:background="@drawable/set_btn_bg"
                >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/person_img1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/default_user_avatar"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="liangdengg2234"
                    android:id="@+id/set_text_name1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_alignTop="@+id/btn_tologin1"
                    android:layout_toRightOf="@+id/person_img1"
                    android:layout_toEndOf="@+id/person_img1"
                    android:layout_marginLeft="10dp"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:id="@+id/textView63"
                    android:layout_below="@+id/person_img1"
                    android:layout_alignLeft="@id/person_img1"
                    android:layout_alignParentStart="true"

                    android:text="22小时前"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/set_text_info1"
                    android:layout_above="@+id/textView63"
                    android:layout_alignLeft="@+id/set_text_name1"
                    android:layout_alignStart="@+id/set_text_name1"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    />



                <ImageView
                    android:id="@+id/btn_tologin1"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>