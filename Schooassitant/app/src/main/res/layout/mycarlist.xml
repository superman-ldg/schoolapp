<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <RelativeLayout

        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_white"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:id="@+id/book_name"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="5dp"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_image"
            android:layout_alignLeft="@id/book_name"
            android:layout_alignTop="@id/btn_xiangqing"
            android:text="定价："

            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/mybook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignStart="@id/book_name"
            android:layout_alignBottom="@id/book_price"
            android:textColor="@color/red"
            android:text="¥"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/book_price"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/mybook"
            android:textColor="@color/red"
            android:textSize="20sp"/>


        <Button
            android:id="@+id/btn_xiangqing"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_below="@id/book_image"
            android:layout_alignStart="@id/book_image"
            android:layout_alignEnd="@id/book_image"
            android:text="详情"
            android:background="@color/colo_blue"
            android:layout_marginTop="10dp"
            android:textSize="18sp" />
    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>